<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="AppTheme.FastFox" parent="AppTheme">
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="margin_20_style">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="margin_40_style">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/color_b7b8b9</item>
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/color_b7b8b9</item>
        <item name="colorControlNormal">@color/color_b7b8b9</item>
        <item name="colorControlActivated">@color/color_b7b8b9</item>
    </style>

</resources>
